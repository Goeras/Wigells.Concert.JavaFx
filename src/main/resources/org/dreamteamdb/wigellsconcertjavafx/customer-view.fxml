<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.dreamteamdb.wigellsconcertjavafx.Controllers.CustomerController"
            prefHeight="600.0" prefWidth="600.0">
<VBox spacing="10">
    <padding>
        <Insets bottom="10.0" top="10.0" left="10.0" right="10.0"/>
    </padding>
    <Label fx:id="name" text="Namn" style="-fx-font-size: 20"/>
    <Label fx:id="address" text="Gata" style="-fx-font-size: 15"/>
    <Label fx:id="postAddress" text="Postkod" style="-fx-font-size: 15"/>
    <Label fx:id="birthdate" text="födelsedatum" style="-fx-font-size: 15"/>
    <Button fx:id="change" text="Ändra info" onAction="#onChangeInfoClick" style="-fx-font-size: 13"/>

    <Label text="Dina biljetter" style="-fx-font-size: 15"/>
    <TableView fx:id="yourTickets" maxHeight="200" style="-fx-font-size: 13">
        <columns>
            <TableColumn prefWidth="100" fx:id="yourDate" text="Datum" style="-fx-font-size: 13"/>
            <TableColumn prefWidth="100" fx:id="yourArtist" text="Artist" style="-fx-font-size: 13"/>
            <TableColumn prefWidth="120" fx:id="yourArena" text="Arena" style="-fx-font-size: 13"/>
            <TableColumn prefWidth="90" fx:id="yourIndoor" text="Inomhus" style="-fx-font-size: 13"/>
            <TableColumn prefWidth="70" fx:id="yourPrice" text="Pris" style="-fx-font-size: 13"/>
            <TableColumn prefWidth="100" fx:id="yourMinAge" text="Åldersgräns" style="-fx-font-size: 13"/>
        </columns>
    </TableView>
    <Button fx:id="cancelTicket" text="Avboka Biljett" onAction="#onCancelTicketsClick" style="-fx-font-size: 13"/>

    <Label text="Kommande konserter" style="-fx-font-size: 15"/>
    <TableView fx:id= "upcomingTickets" style="-fx-font-size: 13" maxHeight="200">
        <columns>
            <TableColumn prefWidth="90" fx:id="upcomingDate" text="Datum" style="-fx-font-size: 13"/>
            <TableColumn prefWidth="100" fx:id="upcomingArtist" text="Artist" style="-fx-font-size: 13"/>
            <TableColumn prefWidth="120" fx:id="upcomingArena" text="Arena" style="-fx-font-size: 13"/>
            <TableColumn prefWidth="90" fx:id="upcomingIndoor" text="Inomhus" style="-fx-font-size: 13"/>
            <TableColumn prefWidth="70" fx:id="upcomingPrice" text="Pris" style="-fx-font-size: 13"/>
            <TableColumn prefWidth="100" fx:id="upcomingMinAge" text="Åldersgräns" style="-fx-font-size: 13"/>
        </columns>
    </TableView>
    <Button fx:id="buyTicket" text="Köp Biljetter" onAction="#onBuyTicketsClick" style="-fx-font-size: 13"/>
    <Button fx:id="logout" text="Logga ut" onAction="#onLogoutButtonClick" style="-fx-font-size: 13"/>
</VBox>
</AnchorPane>
