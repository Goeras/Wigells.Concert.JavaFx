<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.dreamteamdb.wigellsconcertjavafx.Controllers.ChangeInfoController"
            prefHeight="400.0" prefWidth="600.0">
    <VBox alignment="CENTER" style="-fx-font-size: 13" spacing="20">
        <Label text="Wigells Concert" style="-fx-font-size: 20"/>
        <VBox spacing="5" alignment="CENTER">
            <Label text="Ändra information" style="-fx-font-size: 15"/>
            <TextField fx:id="firstName" maxWidth="150"/>
            <TextField fx:id="lastName" maxWidth="150"/>
            <TextField fx:id="phoneNumber" maxWidth="150"/>
            <TextField fx:id="street" maxWidth="150"/>
            <TextField fx:id="houseNr" maxWidth="150"/>
            <TextField fx:id="postalCode" maxWidth="150"/>
            <TextField fx:id="city" maxWidth="150"/>
        </VBox>

        <HBox alignment="CENTER" spacing="5">
            <Button text="Spara ny info" onAction="#onSaveButtonClick" minWidth="150"/>
            <Button text="Ta bort din användare" onAction="#onDeleteClick" minWidth="150"/>
        </HBox>
        <Button text="Tillbaka" onAction="#onBackButtonClick"/>

        <Label fx:id="newCustomerException" text="Telefonnummer används redan" managed="false" visible="false" style="-fx-font-size: 15px; -fx-text-fill: red"/>
    </VBox>
</StackPane>
